{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend && DJANGO_SETTINGS_MODULE=backend.settings gunicorn backend.wsgi:application --bind 0.0.0.0:$PORT --log-file -",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}